<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D7D7"
    android:id="@+id/outer"
    tools:context=".activity.UserexplainActivity">

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/content_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/offical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RelativeLayout0"
                android:orientation="vertical">
            </LinearLayout>






            <androidx.cardview.widget.CardView
                android:id="@+id/card_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                android:layout_alignParentBottom ="true"

                >
                <RelativeLayout
                    android:id="@+id/RelativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/title_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="23dp"
                        android:color="#19FFFFFF"
                        android:text="上传讲解"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/title_2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_2"
                        android:layout_marginLeft="23dp"
                        android:color="#19FFFFFF"
                        android:text="上传图片"
                        android:textColor="#000000"
                        android:textSize="25sp" />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_toRightOf="@id/title_2_1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/title_2"
                        app:srcCompat="@drawable/upload" />
                    <TextView
                        android:id="@+id/title_2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_2_1"
                        android:layout_marginLeft="23dp"
                        android:color="#19FFFFFF"
                        android:text="上传音频"
                        android:textColor="#000000"
                        android:textSize="25sp" />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:layout_toRightOf="@id/title_2_2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/title_2_1"
                        app:srcCompat="@drawable/upload" />
                    <TextView
                        android:id="@+id/title_2_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_2_2"
                        android:layout_marginLeft="23dp"
                        android:color="#19FFFFFF"
                        android:text="添加文字"
                        android:textColor="#000000"
                        android:textSize="25sp" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_2_4"
                        android:layout_width="350dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/title_2_3"
                        app:cardBackgroundColor="#D7D7D7"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true">

                            <EditText
                                android:id="@+id/edit_2_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="20sp" />
                        </ScrollView>

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_2_4"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="-3dp"
                        android:text="提交讲解" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
