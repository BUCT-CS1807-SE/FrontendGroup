<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="0dp"
                android:color="#19FFFFFF"
                android:text="用户讲解"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/title_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_1"
                android:layout_marginLeft="23dp"
                android:color="#19FFFFFF"
                android:text="图片"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/menu_add5"
                android:layout_width="272dp"
                android:layout_height="170dp"
                android:layout_below="@+id/title_5"
                android:layout_centerInParent="true"
                tools:srcCompat="@tools:sample/avatars"/>

            <TextView
                android:id="@+id/title_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu_add5"
                android:layout_marginLeft="23dp"
                android:color="#19FFFFFF"
                android:text="音频"
                android:textColor="#000000"
                android:textSize="20sp" />
            <Button android:id="@+id/play"
                android:layout_width="80dp"
                android:layout_height="37dp"
                android:layout_toRightOf="@id/title_6"
                android:layout_below="@+id/menu_add5"
                android:layout_marginLeft="23dp"
                android:text="播放"
                />
            <Button android:id="@+id/pause"
                android:layout_width="80dp"
                android:layout_height="37dp"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@id/play"
                android:layout_below="@+id/menu_add5"
                android:text="暂停"
                />

            <SeekBar
                android:id="@+id/seekbar_id"
                android:layout_width="351dp"
                android:layout_height="26dp"
                android:layout_below="@+id/title_6"
                android:layout_centerInParent="true"
                android:max="100"
                android:progress="10" />


            <TextView
                android:id="@+id/title_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekbar_id"
                android:layout_marginLeft="23dp"
                android:color="#19FFFFFF"
                android:text="文字"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/title_8"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_7"
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:color="#19FFFFFF"
                android:text="暂无文字讲解"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/title_9"
                android:layout_width="351dp"
                android:layout_height="20dp"
                android:layout_below="@+id/title_8"
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:color="#19FFFFFF"
                android:text=""
                android:textColor="#000000"
                android:textSize="15sp" />







        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>