<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="登入"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="350dp"
            android:layout_height="232dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:src="@drawable/material1" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:text="手机号"
            android:textColor="#726D9D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="26dp"
            android:layout_marginStart="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_text_bg1"
                android:ems="10"
                android:hint="请输入手机号"
                android:inputType="text"
                android:paddingStart="25dp"
                android:textSize="18sp"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-60dp"
                android:src="@drawable/material3" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:text="密码"
            android:textColor="#726D9D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_text_bg1"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="text"
                android:paddingStart="25dp"
                android:textSize="18sp"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-60dp"
                android:src="@drawable/material2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn1_bg"
                android:backgroundTint="#FFC94A03"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/login"
                android:background="@drawable/btn1_bg"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="记住密码" />

            <CheckBox
                android:id="@+id/cb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="自动登录" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>