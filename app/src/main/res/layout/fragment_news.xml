<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"    >
<!--    tools:context=".fragment.VideoFragment"-->


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/et_bg"
                android:hint="请输入地址"
                android:imeOptions="actionSearch"
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="14sp" />
        </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/component1"
        android:layout_height="178dp"
        android:layout_width="329dp"
        app:cardBackgroundColor="#FFE2E2E2"
        app:cardCornerRadius="18dp"
         >


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            tools:srcCompat="@drawable/map_card1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_height="53dp"
            android:layout_width="187dp"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="18dp"
            android:background="#FFF2F2F2"
            android:shadowDy="5dp"
            android:shadowDx="0dp"
            android:shadowColor="#23000000"
            android:shadowRadius="0dp"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="博物馆名称" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="播放讲解"
            android:includeFontPadding="false"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_height="21dp"
            android:layout_width="90dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="83dp"
            android:gravity="center"
            android:text="博物馆等级"
            android:includeFontPadding="false"
            android:textSize="18dp" />
        <View  android:layout_height="1dp"
            android:layout_width="88dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="115dp"
            android:background="#000000" />
        <TextView
            android:id="@+id/textView5"
            android:layout_height="21dp"
            android:layout_width="90dp"
            android:layout_marginLeft="199dp"
            android:layout_marginTop="83dp"
            android:gravity="center"
            android:text="近期展览一"
            android:includeFontPadding="false"
            android:textSize="18dp" />
        <View  android:layout_height="1dp"
            android:layout_width="88dp"
            android:layout_marginLeft="199dp"
            android:layout_marginTop="115dp"
            android:background="#000000" />
        <TextView
            android:id="@+id/textView6"
            android:layout_height="21dp"
            android:layout_width="90dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="130dp"
            android:gravity="center"
            android:text="所在城市"
            android:includeFontPadding="false"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/textView7"
            android:layout_height="21dp"
            android:layout_width="90dp"
            android:layout_marginLeft="199dp"
            android:layout_marginTop="130dp"
            android:gravity="center"
            android:text="近期展览二"
            android:includeFontPadding="false"
            android:textSize="18dp" />
        <View  android:layout_height="90dp"
            android:layout_width="1dp"
            android:layout_marginLeft="161dp"
            android:layout_marginTop="71dp"
            android:background="#000000" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_height="15dp"
            android:layout_width="15dp"
            android:layout_marginLeft="288dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/map_card2" />

    </androidx.cardview.widget.CardView>


</LinearLayout>