<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_add"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/material4" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_changeinf"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:text="@string/changeinf"
                    android:textColor="@color/gray_600"
                    android:textColorLink="@color/gray_600"
                    android:textStyle="italic" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="240dp"
                android:layout_height="26dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:text="迟迟钟鼓初长夜，耿耿星河欲曙天"
                android:textStyle="bold"
                android:typeface="serif"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:layout_width="390dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="#AAAAAA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_collection"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/collection" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:text="收藏"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_explain"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/lecturem" />

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:text="讲解"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/btn_main_login"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/returnlogin" />

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:text="返回登陆"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/btn_main_collect"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/trace" />

                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:text="浏览历史"
                    android:paddingLeft="13dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:foregroundGravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30dp"
                android:background="#AAAAAA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="10dp"
                    android:text="关于"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:layout_marginLeft="20dp" />

                <!--                上-->
                <ImageButton
                    android:id="@+id/btn_about"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/reright" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#AAAAAA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:text="用户协议"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp" />

                <!--                下-->
                <ImageButton
                    android:id="@+id/btn_accord"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="200dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/reright"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#AAAAAA">
            </View>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>