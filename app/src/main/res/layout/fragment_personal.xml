        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/guanyu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="430dp"
