<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_add"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/material4" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_changeinf"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/white"
                android:text="@string/changeinf"
                android:textColor="#AAAAAA" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="240dp"
                android:layout_height="23dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="0dp"
                android:text="迟迟钟鼓初长夜，耿耿星河欲曙天"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:layout_width="390dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="#AAAAAA" />

        </LinearLayout>
c
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_collection"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/material10" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:text="收藏"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_explain"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/material9" />

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:text="讲解"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_main_login"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/material8" />


                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:text="返回登陆界面"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:foregroundGravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30dp"
                android:background="#AAAAAA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="10dp"
                    android:text="关于"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp" />

                <ImageButton
                    android:id="@+id/btn_about"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/material11" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#AAAAAA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:text="用户协议"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp" />

                <ImageButton
                    android:id="@+id/btn_accord"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="240dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/material11" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA">
            </View>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>