        android:text="收藏"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="40dp"
        android:layout_height="26dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="360dp"
